generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model WordList {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  word      String     @unique @db.VarChar(50)
  meaning   String     @db.VarChar(255)
  hint      String?    @db.VarChar(400)
  synonyms  Synonyms[]
  isMarked  Boolean    @default(false)
}

model Synonyms {
  id    Int       @id @default(autoincrement())
  word  String    @db.VarChar(50)
  ref   WordList? @relation(fields: [refId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  refId Int

  @@index([refId])
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  username String  @unique
  password String

  @@map("trpc_standalone_user")
}